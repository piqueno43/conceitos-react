{
  "compilerOptions": {
    "target": "es5",                                   
    "lib": ["DOM", "DOM.Iterable", "ESNext"],                                      
    "allowJs": true,                                
    "jsx": "react-jsx",                              
    "noEmit": true,                                 
    "strict": true,                                    
    "moduleResolution": "node",                     
    "resolveJsonModule": true,                      
    "isolatedModules": true,                        
    "allowSyntheticDefaultImports": true,           
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "skipLibCheck": true,                            
    "module": "commonjs",
  },
  "include": ["src"],
}
